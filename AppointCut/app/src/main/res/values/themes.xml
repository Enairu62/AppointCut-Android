<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppointCut" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppointCut.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppointCut.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppointCut.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
    </style>

    <style name="barberShopRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:scaleX">0.60</item>
        <item name="android:scaleY">0.60</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="feedbackRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:scaleX">0.70</item>
        <item name="android:scaleY">0.70</item>
    </style>

    <style name="colorRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="colorRatingBar2" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
    </style>


</resources>