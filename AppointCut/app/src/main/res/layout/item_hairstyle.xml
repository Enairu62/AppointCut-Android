<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_normal">

    <ImageView
        android:id="@+id/styleImage"
        android:layout_width="@dimen/list_image_size"
        android:layout_height="@dimen/list_image_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@color/light_yellow" />

    <TextView
        android:id="@+id/styleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintTop_toTopOf="@id/styleImage"
        app:layout_constraintStart_toEndOf="@id/styleImage"
        android:layout_margin="@dimen/margin_small"
        android:textSize="@dimen/list_name_size"
        android:textStyle="bold"
        tools:text="Braid" />

    <TextView
        android:id="@+id/styleDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintStart_toStartOf="@id/styleName"
        app:layout_constraintTop_toBottomOf="@id/styleName"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Lorem Ipsum" />
</androidx.constraintlayout.widget.ConstraintLayout>